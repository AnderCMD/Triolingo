<!-- Header -->
<%- include('../Includes/Header.ejs') %>
    <link rel="stylesheet" href="/CSS/Login-Registrarse.css">

    <!-- Nav -->
    <%- include('../Includes/Nav-Invitado.ejs') %>

        <!-- Division -->
        <div class="container">
            <div class="login-form">
                <h1>Registrarse</h1>
                <form method="POST" action="">
                    <label for="Nombre">Nombre:</label>
                    <input type="text" id="Nombre" name="Nombre" placeholder="Ingresa tu nombre" required>

                    <label for="Apellido">Apellido:</label>
                    <input type="text" id="Apellido" name="Apellido" placeholder="Ingresa tus apellidos" required>

                    <label for="Fecha_Nacimiento">Fecha de nacimiento:</label>
                    <input type="date" id="Fecha_Nacimiento" name="Fecha_Nacimiento" placeholder="Ingresa tu fecha de nacimeinto" required>

                    <label for="Correo_Electronico">Correo electronico:</label>
                    <input type="email" id="Correo_Electronico" name="Correo_Electronico" placeholder="Ingresa tu correo electronico" required>

                    <label for="Contrasena">Contraseña:</label>
                    <input type="password" id="Contrasena" name="Contrasena" placeholder="Ingresa tu contraseña" required>

                    <label for="Clave_Escuela">Clave:</label>
                    <input type="text" id="Clave_Escuela" name="Clave_Escuela" placeholder="Ingresa tu clave otorgada por la escuela" required>

                    <br>
                    <button type="submit">Registrarse</button>
                    <p>Ya tienes una cuenta? <a href="/Login">Iniciar Sesion</a></p>
                </form>
            </div>
            <div class="login-image">
                <img src="/Resources/Images/Mujer-Fondo-2.jpg" alt="Imagen de inicio de sesión">
            </div>
        </div>

        <!-- Footer -->
        <%- include('../Includes/Footer.ejs') %>